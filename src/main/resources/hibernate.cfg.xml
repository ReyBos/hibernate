<?xml version="1.0" encoding="UTF-8"?>
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://127.0.0.1:5432/job4j_hibernate</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">password</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL10Dialect</property>
        <property name="hibernate.hbm2ddl.auto">update</property>

        <mapping class="ru.reybos.toone.model.Role" />
        <mapping class="ru.reybos.toone.model.User" />
        <mapping class="ru.reybos.many.model.RoleMany" />
        <mapping class="ru.reybos.many.model.UserMany" />
    </session-factory>
</hibernate-configuration>